{
    "name": "labsllm/llm-wrapper",
    "description": "Biblioteca PHP que integra diferentes serviços de LLM (ChatGPT, Claude, Gemini) em um wrapper único",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LabsLLM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "HimAndRobot",
            "email": "geanpn@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test:unit": "phpunit --testsuite=Unit --testdox",
        "test:integration": "phpunit --testsuite=Integration --group=integration --testdox"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
} 